{
  "name": "tailwind",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "postcss-cli": "^6.1.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.2",
    "tailwindcss": "^1.1.2"
  },
  "scripts": {
    "build:css": "postcss src/css/tailwind.src.css -o src/css/tailwind.css",
